html,
body {
  font-size: 62.5%;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: pink;
}

.start-btn, 
.start-btn:link,
.start-btn:visited {
    text-transform: uppercase;
    text-decoration: none;
    padding: 2rem 5rem;
    background-color: palevioletred;
    margin: 1rem auto;
    font-size: 2rem;
    transition: all 0.3s;
    position: relative; 
}

.start-btn {
    background-color: palevioletred;
    color: black;
}

.start-btn::after {
    background-color: palevioletred;
    color: black;
}

.start-btn:hover {
    transform: translateY(-2px); 
    box-shadow: 0 10px 0.5rem rgba (black, 0.6); 
} 

.start-btn::after { 
    content:""; 
    display: inline/block; 
    height: 100%; 
    width: 100%; 
    position: absolute; 
    top: 0; 
    left: 0; 
    z-index: -1; 
    transition: all 0.3s; 
} 

.start-btn:active { 
    transform: translateY(-1px); 
    transform: scaleX(1.5) scaleY(1.6); 
    box-shadow: 0 0.5rem 1rem black; 
}


.question-box {
  width: 45rem;
  padding: 3rem;
  background-color: whitesmoke;
  box-shadow: 0 0 1rem 0.5rem rgba(0, 0, 0, 0.15);
  border-radius: 2rem;
}
.question-header {
  background-color: palevioletred;
  display: flex;
  justify-content: space-between;
  padding: 1.5rem 1.5rem;
  margin: -2rem -2rem 20px;
  border-radius: 2rem 2rem 0 0;
  font-size: 3rem;
}

.question-set {
  display: none;
}

.question-set.active {
  display: block;
}

.question-set h4 {
  margin: 0 0 1.5rem;
  font-size: 2rem;
}

.answer-section {
  position: relative;
  margin-bottom: 1rem;
}

.answer-section input {
  opacity: 0;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.answer-section {
  display: block;
  padding: 0.8rem 1.5rem;
  border-radius: 1.5rem;
  transition: all 0.3s;
  background-color: rgba(255, 203, 210, 0.431);
  font-size: 1.5rem;
}

.answer-section:hover {
  background-color: rgba(218, 172, 178, 0.431);
  transform: scale(1.02);
  transform: transform 100ms;
  cursor: pointer;
}

.correct {
  background: linear-gradient(
    32deg,
    rgb(181, 222, 196) 0%,
    rgb(149, 208, 171) 100%
  );
}

.incorrect {
  background: linear-gradient(
    32deg,
    rgb(252, 190, 190) 0%,
    rgb(254, 166, 166) 100%
  );
}

